					{
						pFrames[dispCtrl.curFrame][y_min3*DEMO_STRIDE+xcoi*3] = draw_r;         //Red
						pFrames[dispCtrl.curFrame][y_min3*DEMO_STRIDE+xcoi*3+1] = draw_g; //Blue
						pFrames[dispCtrl.curFrame][y_min3*DEMO_STRIDE+xcoi*3 +2] = draw_b; //Green
					}
