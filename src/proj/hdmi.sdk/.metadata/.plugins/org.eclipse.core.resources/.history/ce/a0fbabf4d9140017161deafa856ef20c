						pFrames[dispCtrl.curFrame][ycoi*DEMO_STRIDE+x_max3*3] = draw_r;         //Red
						pFrames[dispCtrl.curFrame][ycoi*DEMO_STRIDE+x_max3*3+1] = draw_g; //Blue
						pFrames[dispCtrl.curFrame][ycoi*DEMO_STRIDE+x_max3*3 +2] = draw_b; //Green
					}
				}


